/*
 * -----------------------------------------------------------------------------------
 * Singularity config 
 * -----------------------------------------------------------------------------------
 * Nextflow config file for use with small test files, primarily for Travis-CI tests
 * -----------------------------------------------------------------------------------
 */

env {
  TMPDIR = "."
}
params {
  genome = "smallGRCh37"
  mem_per_core = false
  reference_base = "test-data/reference"
  targets_base   = "test-data/reference/targets"
  genome_base = "${reference_base}"
  splitLanes = false
}
